.row
  .col-md-2
    %ul.nav.nav-pills.nav-stacked.nav-stacked-menu
      %li.active
        = link_to '#tab-edit', 'data-toggle' => 'tab' do
          %i.icon-edit
          グループ
      %li
        = link_to '#tab-projects', 'data-toggle' => 'tab' do
          %i.icon-folder-close
          プロジェクト
      %li
        = link_to '#tab-remove', 'data-toggle' => 'tab' do
          %i.icon-remove-sign
          削除

  .col-md-10
    .tab-content
      .tab-pane.active#tab-edit
        .ui-box
          .title
            %strong= @group.name
            グループの設定:
          %div.form-holder
            = form_for @group, html: { multipart: true, class: "form-horizontal" }, authenticity_token: true do |f|
              - if @group.errors.any?
                .alert.alert-danger
                  %span= @group.errors.full_messages.first
              .form-group
                = f.label :name, class: 'control-label' do
                  グループ名
                .col-sm-10
                  = f.text_field :name, placeholder: "Ex. OpenSource", class: "form-control left"

              .form-group.group-description-holder
                = f.label :description, "詳細", class: 'control-label'
                .col-sm-10
                  = f.text_area :description, maxlength: 250, class: "form-control js-gfm-input", rows: 4

              .form-group
                .col-sm-2
                .col-sm-10
                  = image_tag group_icon(@group.to_param), alt: '', class: 'avatar s160'
                  %p.light
                    - if @group.avatar?
                      アバターを変更することができます。
                    - else
                      アバターをアップロードすることができます。
                  %a.choose-btn.btn.btn-small.js-choose-group-avatar-button
                    %i.icon-paper-clip
                    %span ファイルを選択 ...
                  &nbsp;
                  %span.file_name.js-avatar-filename ファイル名...
                  = f.file_field :avatar, class: "js-group-avatar-input hidden"
                  .light ファイルの最大サイズは100KBです
                  - if @group.avatar?
                    %hr
                    = link_to 'アバターを削除', group_avatar_path(@group.to_param), data: { confirm: "グループアバターを削除します。よろしいですか？"}, method: :delete, class: "btn btn-remove btn-small remove-avatar"

              .form-actions
                = f.submit 'グループを保存', class: "btn btn-save"

      .tab-pane#tab-projects
        .ui-box
          .title
            %strong= @group.name
            のプロジェクト:
            - if can? current_user, :manage_group, @group
              %span.pull-right
                = link_to new_project_path(namespace_id: @group.id), class: "btn btn-tiny" do
                  %i.icon-plus
                  新しいプロジェクト
          %ul.well-list
            - @group.projects.each do |project|
              %li
                .list-item-name
                  = visibility_level_icon(project.visibility_level)
                  = link_to project.name_with_namespace, project
                .pull-right
                  = link_to 'メンバー', project_team_index_path(project), id: "edit_#{dom_id(project)}", class: "btn btn-small"
                  = link_to '編集', edit_project_path(project), id: "edit_#{dom_id(project)}", class: "btn btn-small"
                  = link_to '削除', project, data: { confirm: remove_project_message(project)}, method: :delete, class: "btn btn-small btn-remove"
            - if @group.projects.blank?
              .nothing-here-block このグループにはまだプロジェクトがありません

      .tab-pane#tab-remove
        .ui-box.ui-box-danger
          .title グループの削除
          .body
            %p
              グループを削除すると、子プロジェクトとリソースも削除されます。
            %p
              %strong グループの削除は元に戻せません！

            = link_to 'グループの削除', @group, data: {confirm: 'グループの削除は元に戻せません！本当に削除しますか？'}, method: :delete, class: "btn btn-remove"
