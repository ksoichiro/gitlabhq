#modal-remove-blob.modal.hide
  .modal-dialog
    .modal-content
      .modal-header
        %a.close{href: "#", "data-dismiss" => "modal"} ×
        %h3.page-title #{@blob.name}を削除
        %p.light
          %strong= @ref
          ブランチから

      .modal-body
        = form_tag project_blob_path(@project, @id), method: :delete, class: 'form-horizontal' do
          = render 'shared/commit_message_container', params: params,
                   placeholder: '...のためファイルを削除'
          .form-group
            .col-sm-2
            .col-sm-10
              = button_tag 'ファイルを削除', class: 'btn btn-remove btn-remove-file'
              = link_to "キャンセル", '#', class: "btn btn-cancel", "data-dismiss" => "modal"

:javascript
  disableButtonIfEmptyField('#commit_message', '.btn-remove-file')
