- empty_repo = @project.empty_repo?
.project-home-panel{:class => ("empty-project" if empty_repo)}
  .visibility-level-label.has_tooltip{'data-title' => "#{visibility_level_label(@project.visibility_level)}プロジェクト" }
    = visibility_level_icon(@project.visibility_level)
  .row
    .col-sm-6
      %h4.project-home-title
        = @project.name_with_namespace

    .col-sm-6
      - if current_user && !empty_repo
        .project-home-dropdown
          = render "dropdown"
      = render "shared/clone_panel"

  .project-home-extra.row
    .col-md-7
      .project-home-desc
        - if @project.description.present?
          = auto_link ERB::Util.html_escape(@project.description), link: :urls
        - if can?(current_user, :admin_project, @project)
          &ndash;
          %strong= link_to '編集', edit_project_path
        - elsif !@project.empty_repo? && @repository.readme
          - readme = @repository.readme
          &ndash;
          = link_to project_blob_path(@project, tree_join(@repository.root_ref, readme.name)) do
            = readme.name

    .col-md-5
      .project-home-links
        - unless empty_repo
          = link_to pluralize(number_with_delimiter(@repository.commit_count), 'コミット'), project_commits_path(@project, @ref || @repository.root_ref)
          = link_to pluralize(number_with_delimiter(@repository.branch_names.count), 'ブランチ'), project_branches_path(@project)
          = link_to pluralize(number_with_delimiter(@repository.tag_names.count), 'タグ'), project_tags_path(@project)
          %span.light.prepend-left-20= repository_size
