= form_for [@project, @wiki], method: @wiki.persisted? ? :put : :post, html: { class: 'form-horizontal' } do |f|
  -if @wiki.errors.any?
    #error_explanation
      %h2= "#{@wiki.errors.count} 個のエラーがあるためこのWikiは保存できません。"
      %ul
        - @wiki.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :title, value: @wiki.title
  .form-group
    = f.label :format, 'フォーマット', class: 'control-label'
    .col-sm-10
      = f.select :format, options_for_select(GollumWiki::MARKUPS, {selected: @wiki.format}), {}, class: "form-control"

  .row
    .col-sm-2
    .col-sm-10
      %p.cgray
        Wikiの内容は#{link_to "GitLab Flavored Markdown", help_markdown_path, target: '_blank'}記法でパースされます。
        %br
        (新しい)ページをリンクするには
        %code [Link Title](page-slug)
        と記述します。

  .form-group
    = f.label :content, '内容', class: 'control-label'
    .col-sm-10
      = f.text_area :content, class: 'form-control js-gfm-input', rows: 18

  .form-group
    = f.label :commit_message, 'コミットメッセージ', class: 'control-label'
    .col-sm-10= f.text_field :message, class: 'form-control', rows: 18

  .form-actions
    - if @wiki && @wiki.persisted?
      = f.submit '変更を保存', class: "btn-save btn"
      = link_to "キャンセル", project_wiki_path(@project, @wiki), class: "btn btn-cancel"
    - else
      = f.submit 'ページを作成', class: "btn-create btn"
      = link_to "キャンセル", project_wiki_path(@project, :home), class: "btn btn-cancel"
