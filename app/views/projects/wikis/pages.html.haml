- page_title "すべてのページ", "Wiki"
= render "header_title"

= render 'nav'
.gray-content-block
  = render 'main_links'
  %h3.page-title
    すべてのページ
%ul.content-list
  - @wiki_pages.each do |wiki_page|
    %li
      %h4
        = link_to wiki_page.title, namespace_project_wiki_path(@project.namespace, @project, wiki_page)
        %small (#{wiki_page.format})
        .pull-right
          %small 最終更新：#{time_ago_with_tooltip(wiki_page.commit.authored_date)}
= paginate @wiki_pages, theme: 'gitlab'
