%li{id: dom_id(label)}
  = render_colored_label(label)
  .pull-right
    %strong.append-right-20
      = link_to namespace_project_issues_path(@project.namespace, @project, label_name: label.name) do
        #{label.open_issues_count} 件の課題

    - if can? current_user, :admin_label, @project
      = link_to '編集', edit_namespace_project_label_path(@project.namespace, @project, label), class: 'btn'
      = link_to '削除', namespace_project_label_path(@project.namespace, @project, label), class: 'btn btn-remove remove-row', method: :delete, remote: true, data: {confirm: "本当にこのラベルを削除しますか？"}
