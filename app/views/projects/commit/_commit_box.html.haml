.pull-right
  %div
    - if @notes_count > 0
      %span.btn.disabled.btn-grouped
        %i.icon-comment
        = @notes_count
    .pull-left.btn-group
      %a.btn.btn-grouped.dropdown-toggle{ data: {toggle: :dropdown} }
        %i.icon-download-alt
        ダウンロード
        %span.caret
      %ul.dropdown-menu
        %li= link_to "メール用パッチ", project_commit_path(@project, @commit, format: :patch)
        %li= link_to "プレーンDiff",    project_commit_path(@project, @commit, format: :diff)
    = link_to project_tree_path(@project, @commit), class: "btn btn-primary btn-grouped" do
      %span コードを表示 »
  %div

%p
  %span.light コミット
  = link_to @commit.id, project_commit_path(@project, @commit)
.commit-info-row
  %strong
    = commit_author_link(@commit, avatar: true, size: 24)
  %span.light が
  #{time_ago_with_tooltip(@commit.authored_date)}
  %span.light に作成

- if @commit.different_committer?
  .commit-info-row
    %strong
      = commit_committer_link(@commit, avatar: true, size: 24)
    %span.light が
    #{time_ago_with_tooltip(@commit.committed_date)}
    %span.light に作成

.commit-info-row
  %span.cgray= "#{@commit.parents.count}つの親コミット:"
  - @commit.parents.each do |parent|
    = link_to parent.id[0...10], project_commit_path(@project, parent)

- if @branches.any?
  .commit-info-row
    %span
      - branch = commit_default_branch(@project, @branches)
      = link_to(branch, project_tree_path(@project, branch))
      - if @branches.any?
        とその他
        = link_to("#{@branches.count}つの", "#", class: "js-details-expand")
        %span.js-details-content.hide
          = commit_branches_links(@project, @branches)
    %span.cgray
      ブランチに存在

.commit-box
  %h3.commit-title
    = gfm escape_once(@commit.title)
  - if @commit.description.present?
    %pre.commit-description
      = preserve(gfm(escape_once(@commit.description)))
