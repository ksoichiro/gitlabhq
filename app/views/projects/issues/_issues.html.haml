.append-bottom-10
  .check-all-holder
    = check_box_tag "check_all_issues", nil, false, class: "check_all_issues left", disabled: !can?(current_user, :modify_issue, @project)
  = render 'shared/issuable_filter'

  .clearfix
    .issues_bulk_update.hide
      = form_tag bulk_update_project_issues_path(@project), method: :post  do
        = select_tag('update[status]', options_for_select([['オープン', 'open'], ['解決', 'closed']]), prompt: "ステータス")
        = project_users_select_tag('update[assignee_id]', placeholder: '担当者')
        = select_tag('update[milestone_id]', bulk_update_milestone_options, prompt: "マイルストーン")
        = hidden_field_tag 'update[issues_ids]', []
        = hidden_field_tag :status, params[:status]
        = button_tag "課題を更新", class: "btn update_selected_issues btn-save"

.panel.panel-default
  %ul.well-list.issues-list
    = render @issues
    - if @issues.blank?
      %li
        .nothing-here-block 課題はありません

- if @issues.present?
  .pull-right
    %span.issue_counter #{@issues.total_count}
    個の課題に絞り込まれています

  = paginate @issues, theme: "gitlab"
