- page_title "Issues"
= content_for :meta_tags do
  - if current_user
    = auto_discovery_link_tag(:atom, namespace_project_issues_url(@project.namespace, @project, :atom, private_token: current_user.private_token), title: "#{@project.name} issues")

.append-bottom-10
  .pull-right
    .pull-left
      - if current_user
        .hidden-xs.pull-left
          = link_to namespace_project_issues_path(@project.namespace, @project, :atom, { private_token: current_user.private_token }), class: 'btn append-right-10' do
            %i.fa.fa-rss

      = render 'shared/issuable_search_form', path: namespace_project_issues_path(@project.namespace, @project)

    - if can? current_user, :write_issue, @project
      = link_to new_namespace_project_issue_path(@project.namespace, @project, issue: { assignee_id: params[:assignee_id], milestone_id: params[:milestone_id]}), class: "btn btn-new pull-left", title: "新しい課題", id: "new_issue_link" do
        %i.fa.fa-plus
        新しい課題

  = render 'shared/issuable_filter'

.issues-holder
  = render "issues"
