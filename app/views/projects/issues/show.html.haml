%h3.page-title
  課題 ##{@issue.iid}

  %span.pull-right.issue-btn-group
    - if can?(current_user, :write_issue, @project)
      = link_to new_project_issue_path(@project), class: "btn btn-grouped", title: "新しい課題", id: "new_issue_link" do
        %i.icon-plus
        新しい課題
    - if can?(current_user, :modify_issue, @issue)
      - if @issue.closed?
        = link_to 'オープン', project_issue_path(@project, @issue, issue: {state_event: :reopen }, status_only: true), method: :put,  class: "btn btn-grouped btn-reopen"
      - else
        = link_to '解決', project_issue_path(@project, @issue, issue: {state_event: :close }, status_only: true), method: :put, class: "btn btn-grouped btn-close", title: "課題を解決"

      = link_to edit_project_issue_path(@project, @issue), class: "btn btn-grouped" do
        %i.icon-edit
        編集

.clearfix
  .votes-holder
    #votes= render 'votes/votes_block', votable: @issue

  .back-link
    = link_to project_issues_path(@project) do
      &larr; 課題一覧に戻る
    %span.milestone-nav-link
      - if @issue.milestone
        |
        %span.light マイルストーン
        = link_to project_milestone_path(@project, @issue.milestone) do
          = @issue.milestone.title

.issue-box{ class: issue_box_class(@issue) }
  .state.clearfix
    .state-label.col-sm-2.col-xs-12
      - if @issue.closed?
        解決
      - else
        オープン

    %span.creator.col-sm-9.col-xs-12
      #{link_to_member(@project, @issue.author)}が#{time_ago_with_tooltip(@issue.created_at)}に作成

  %h4.title
    = gfm escape_once(@issue.title)

  - if @issue.description.present?
    .description
      .wiki
        = preserve do
          = markdown @issue.description
  .context
    %cite.cgray
      = render partial: 'issue_context', locals: { issue: @issue }


- content_for :note_actions do
  - if can?(current_user, :modify_issue, @issue)
    - if @issue.closed?
      = link_to '課題を再オープン', project_issue_path(@project, @issue, issue: {state_event: :reopen }, status_only: true), method: :put,  class: "btn btn-grouped btn-reopen"
    - else
      = link_to '課題を解決', project_issue_path(@project, @issue, issue: {state_event: :close }, status_only: true), method: :put, class: "btn btn-grouped btn-close", title: "課題を解決"


.participants
  %cite.cgray #{@issue.participants.count} 人の参加者
  - @issue.participants.each do |participant|
    = link_to_member(@project, participant, name: false, size: 24)

  .issue-show-labels.pull-right
    - @issue.labels.each do |label|
      %span{class: "label #{label_css_class(label.name)}"}
        %i.icon-tag
        = label.name
      &nbsp;

.voting_notes#notes= render "projects/notes/notes_with_form"
