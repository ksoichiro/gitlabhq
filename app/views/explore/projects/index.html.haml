.clearfix
  .pull-left
    = form_tag explore_projects_path, method: :get, class: 'form-inline form-tiny' do |f|
      .form-group
        = search_field_tag :search, params[:search], placeholder: "名前で絞り込み", class: "form-control search-text-input input-mn-300", id: "projects_search"
      .form-group
        = button_tag '検索', class: "btn btn-primary wide"

  .pull-right
    .dropdown.inline
      %a.dropdown-toggle.btn{href: '#', "data-toggle" => "dropdown"}
        %span.light 並び替え:
        - if @sort.present?
          = @sort.humanize
        - else
          名前
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to explore_projects_path(sort: nil) do
            名前
          = link_to explore_projects_path(sort: 'newest') do
            新しい順
          = link_to explore_projects_path(sort: 'oldest') do
            古い順
          = link_to explore_projects_path(sort: 'recently_updated') do
            最近更新された
          = link_to explore_projects_path(sort: 'last_updated') do
            最終更新日

%hr
.public-projects
  %ul.bordered-list.top-list
    = render @projects
    - unless @projects.present?
      .nothing-here-block 公開中のプロジェクトはありません

  = paginate @projects, theme: "gitlab"
