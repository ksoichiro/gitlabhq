.row
  .col-md-3
    .admin-filter
      %ul.nav.nav-pills.nav-stacked
        %li{class: "#{'active' unless params[:filter]}"}
          = link_to admin_users_path do
            アクティブ
            %small.pull-right= User.active.count
        %li{class: "#{'active' if params[:filter] == "admins"}"}
          = link_to admin_users_path(filter: "admins") do
            管理者
            %small.pull-right= User.admins.count
        %li{class: "#{'active' if params[:filter] == "blocked"}"}
          = link_to admin_users_path(filter: "blocked") do
            ブロック中
            %small.pull-right= User.blocked.count
        %li{class: "#{'active' if params[:filter] == "wop"}"}
          = link_to admin_users_path(filter: "wop") do
            プロジェクトに所属しない
            %small.pull-right= User.without_projects.count
      %hr
      = form_tag admin_users_path, method: :get, class: 'form-inline' do
        .form-group
          = search_field_tag :name, params[:name], placeholder: '名前, メールアドレス, ユーザ名', class: 'form-control'
        = button_tag type: 'submit', class: 'btn btn-primary' do
          %i.icon-search
      %hr
      = link_to 'リセット', admin_users_path, class: "btn btn-cancel"

  .col-md-9
    .panel.panel-default
      .panel-heading
        ユーザ (#{@users.total_count})
        .panel-head-actions
          = link_to '新しいユーザ', new_admin_user_path, class: "btn btn-new"
      %ul.well-list
        - @users.each do |user|
          %li
            .list-item-name
              - if user.blocked?
                %i.icon-lock.cred
              - else
                %i.icon-user.cgreen
              = link_to user.name, [:admin, user]
              - if user.admin?
                %strong.cred (管理者)
              - if user == current_user
                %span.cred あなた
            .pull-right
              %span.light
                %i.icon-envelope
                = mail_to user.email, user.email, class: 'light'
              &nbsp;
              = link_to '編集', edit_admin_user_path(user), id: "edit_#{dom_id(user)}", class: "btn btn-small"
              - unless user == current_user
                - if user.blocked?
                  = link_to 'ブロック解除', unblock_admin_user_path(user), method: :put, class: "btn btn-small success"
                - else
                  = link_to 'ブロック', block_admin_user_path(user), data: {confirm: 'ユーザはブロックされます！よろしいですか？'}, method: :put, class: "btn btn-small btn-remove"
                = link_to '削除', [:admin, user], data: { confirm: "ユーザ #{user.name} は削除されます！このユーザに関連するすべての課題も削除されます！削除する代わりにブロックした方が良いかもしれません。本当に削除しますか？" }, method: :delete, class: "btn btn-small btn-remove"
    = paginate @users, theme: "gitlab"
