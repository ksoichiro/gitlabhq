%ul.project-navigation.nav.nav-sidebar
  = nav_link do
    = link_to project_path(@project), title: 'プロジェクトに戻る', data: {placement: 'right'} do
      = icon('caret-square-o-left fw')
      %span
        プロジェクトに戻る

  %li.separate-item

  %ul.project-settings-nav.sidebar-subnav
    = nav_link(path: 'projects#edit') do
      = link_to edit_project_path(@project), title: 'プロジェクト', class: 'stat-tab tab', data: {placement: 'right'} do
        = icon('pencil-square-o')
        %span
          プロジェクト
    = nav_link(controller: [:project_members, :teams]) do
      = link_to namespace_project_project_members_path(@project.namespace, @project), title: 'メンバー', class: 'team-tab tab', data: {placement: 'right'} do
        = icon('users')
        %span
          メンバー
    = nav_link(controller: :deploy_keys) do
      = link_to namespace_project_deploy_keys_path(@project.namespace, @project), title: 'デプロイキー', data: {placement: 'right'} do
        = icon('key')
        %span
          デプロイキー
    = nav_link(controller: :hooks) do
      = link_to namespace_project_hooks_path(@project.namespace, @project), title: 'Webフック', data: {placement: 'right'} do
        = icon('link')
        %span
          Webフック
    = nav_link(controller: :services) do
      = link_to namespace_project_services_path(@project.namespace, @project), title: 'サービス', data: {placement: 'right'} do
        = icon('cogs')
        %span
          サービス
    = nav_link(controller: :protected_branches) do
      = link_to namespace_project_protected_branches_path(@project.namespace, @project), title: '保護ブランチ', data: {placement: 'right'} do
        = icon('lock')
        %span
          保護ブランチ

