%ul.nav.nav-sidebar
  = nav_link(path: 'groups#show', html_options: {class: 'home'}) do
    = link_to group_path(@group), title: "ホーム" do
      %i.fa.fa-dashboard
      %span
        アクティビティ
  - if current_user
    = nav_link(controller: [:group, :milestones]) do
      = link_to group_milestones_path(@group), title: 'マイルストーン' do
        %i.fa.fa-clock-o
        %span
          マイルストーン
  = nav_link(path: 'groups#issues') do
    = link_to issues_group_path(@group), title: '課題' do
      %i.fa.fa-exclamation-circle
      %span
        課題
        - if current_user
          %span.count= Issue.opened.of_group(@group).count
  = nav_link(path: 'groups#merge_requests') do
    = link_to merge_requests_group_path(@group), title: 'マージリクエスト' do
      %i.fa.fa-tasks
      %span
        マージリクエスト
        - if current_user
          %span.count= MergeRequest.opened.of_group(@group).count
  = nav_link(controller: [:group_members]) do
    = link_to group_group_members_path(@group), title: 'メンバー' do
      %i.fa.fa-users
      %span
        メンバー

  - if can?(current_user, :admin_group, @group)
    = nav_link(html_options: { class: "#{"active" if group_settings_page?} separate-item" }) do
      = link_to edit_group_path(@group), title: '設定', class: "tab no-highlight" do
        %i.fa.fa-cogs
        %span
          設定
          %i.fa.fa-angle-down

  - if group_settings_page?
    = render 'groups/settings_nav'
