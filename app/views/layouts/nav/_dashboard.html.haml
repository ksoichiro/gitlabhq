%ul.nav.nav-sidebar
  = nav_link(path: ['root#index', 'projects#trending', 'projects#starred', 'dashboard/projects#index'], html_options: {class: 'home'}) do
    = link_to root_path, title: 'プロジェクト', data: {placement: 'right'} do
      = icon('home fw')
      %span
        プロジェクト
  = nav_link(path: 'dashboard#activity') do
    = link_to activity_dashboard_path, class: 'shortcuts-activity', title: 'アクティビティ', data: {placement: 'right'} do
      = icon('dashboard fw')
      %span
        アクティビティ
  = nav_link(controller: :groups) do
    = link_to dashboard_groups_path, title: 'グループ', data: {placement: 'right'} do
      = icon('group fw')
      %span
        グループ
  = nav_link(controller: :milestones) do
    = link_to dashboard_milestones_path, title: 'マイルストーン', data: {placement: 'right'} do
      = icon('clock-o fw')
      %span
        マイルストーン
  = nav_link(path: 'dashboard#issues') do
    = link_to assigned_issues_dashboard_path, title: '課題', class: 'shortcuts-issues', data: {placement: 'right'} do
      = icon('exclamation-circle fw')
      %span
        課題
        %span.count= current_user.assigned_issues.opened.count
    = nav_link(path: 'dashboard#merge_requests') do
      = link_to assigned_mrs_dashboard_path, title: 'マージリクエスト', class: 'shortcuts-merge_requests', data: {placement: 'right'} do
        = icon('tasks fw')
        %span
          マージリクエスト
          %span.count= current_user.assigned_merge_requests.opened.count
  = nav_link(path: ['ci/projects#index', 'ci/projects#disabled']) do
    = link_to ci_projects_path, title: 'Continuous Integration', data: {placement: 'right'} do
      = icon('building fw')
      %span
        Continuous Integration
  = nav_link(controller: :snippets) do
    = link_to dashboard_snippets_path, title: 'あなたのスニペット', data: {placement: 'right'} do
      = icon('clipboard fw')
      %span
        スニペット
  = nav_link(controller: :help) do
    = link_to help_path, title: 'ヘルプ', data: {placement: 'right'} do
      = icon('question-circle fw')
      %span
        ヘルプ

  %li.separate-item
  = nav_link(controller: :profile) do
    = link_to profile_path, title: 'プロフィール設定', data: {placement: 'bottom'} do
      = icon('user fw')
      %span
        プロフィール設定
