%ul.nav.nav-sidebar
  = nav_link(path: 'profiles#show', html_options: {class: 'home'}) do
    = link_to profile_path, title: "プロフィール" do
      %i.fa.fa-user
      %span
        プロフィール
  = nav_link(controller: :accounts) do
    = link_to profile_account_path, title: 'Account' do
      %i.fa.fa-gear
      %span
        アカウント
  = nav_link(path: ['profiles#applications', 'applications#edit', 'applications#show', 'applications#new']) do
    = link_to applications_profile_path, title: 'アプリケーション' do
      %i.fa.fa-cloud
      %span
        アプリケーション
  = nav_link(controller: :emails) do
    = link_to profile_emails_path, title: 'メール' do
      %i.fa.fa-envelope-o
      %span
        メール
        %span.count= current_user.emails.count + 1
  - unless current_user.ldap_user?
    = nav_link(controller: :passwords) do
      = link_to edit_profile_password_path, title: 'パスワード' do
        %i.fa.fa-lock
        %span
          パスワード
  = nav_link(controller: :notifications) do
    = link_to profile_notifications_path, title: '通知' do
      %i.fa.fa-inbox
      %span
        通知

  = nav_link(controller: :keys) do
    = link_to profile_keys_path, title: 'SSHキー' do
      %i.fa.fa-key
      %span
        SSHキー
        %span.count= current_user.keys.count
  = nav_link(path: 'profiles#design') do
    = link_to design_profile_path, title: 'デザイン' do
      %i.fa.fa-image
      %span
        デザイン
  = nav_link(path: 'profiles#history') do
    = link_to history_profile_path, title: '履歴' do
      %i.fa.fa-history
      %span
        履歴
